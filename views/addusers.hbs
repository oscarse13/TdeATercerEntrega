{{>header}}
<div class="panel-group main-container">
    <h1><span class="badge badge-secondary">Administrar Usuarios</span></h1>
    <div class="row">
        <div class="col-md-3">
           <form action="/adduser" method="POST">
            <div class="alert alert-{{{alertclass}}}" role="alert" style="display:{{{displaymessage}}};">
                <label >{{{ usuario.validacion }}}</label>
            </div>
            <div class="form-group">
                <label for="id">Documento Identidad</label>
                <input type="number" class="form-control" id="documento" name="documento" placeholder="Documento Identidad del usuario" required value="{{{ usuario.documento }}}">
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre del usuario" required value="{{{ usuario.nombre }}}">
            </div>
             <div class="form-group">
                <label for="nombre">Correo Electrónico</label>
                <input type="text" class="form-control" id="correo" name="correo" placeholder="Correo del usuario" required value="{{{ usuario.correo }}}">
            </div>
            <div class="form-group">
                <label for="valor">Teléfono</label>
                <input type="number" class="form-control" id="telefono" name="telefono" placeholder="Teléfono del usuario" required value="{{{ usuario.telefono }}}">
            </div>
            <div class="form-group">
                <label for="modalidad">Rol</label>
                <select class="form-control" id="rol" name="rol">                   
                        <option value="aspirante">Aspirante</option>
                        <option value="coordinador">Coordinador</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Crear</button>
            </form>
        </div>
        <div class="col-md-9">
            {{{listarUsuarios}}}
        </div>
    </div>
</div>
{{>footer}}
